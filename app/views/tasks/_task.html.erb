<%# Keep in-sync with _form.html.erb  %>

  <% if task.status %>
    <span class="task-left-header">
      <%= task.status.name %>
    </span>
  <% end %>
  <span class="task-main">
    <h2 class="flex-title"><%= task.name %><span class="task-due-at"> due in <%= distance_of_time_in_words(Time.now, task.due_at) %></span></h2>
    <p><%= task.description %></p>
    <% if task.category %>
      <% rgbvalues = task.category.color.match(/(\d{1,3}),(\d{1,3}),(\d{1,3})/) %>
      <span class="category-badge" style="background-color: rgb(<%= "#{rgbvalues[1]}, #{rgbvalues[2]}, #{rgbvalues[3]}" %>);"><%= task.category.name %></span>
    <% end %>
  </span>
  <% if task.status && task.status.name != "Done" %>
    <button class="completeTask"><i class="fa fa-check"></i></button>
  <% end %>
