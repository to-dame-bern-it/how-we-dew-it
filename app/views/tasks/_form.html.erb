<ul class="flex-boxes">
<%= form_for(@task, remote: true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <li class="flex-box flex-box-big task">
    <span class="task-main">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "task-name-edit" %>

    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "(optional)", class: "task-description-edit" %>

    <%= f.label :due_at %><br>
    <%= f.datetime_select :due_at %>

    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, @current_user.categories, :id, :name %>

    <%= f.label :status_id %><br>
    <%= f.collection_select :status_id, @current_user.statuses, :id, :name %>

    <%= f.submit %>

<!--
  <div class="field">
    <%= f.label :owner_task_id %><br>
    <%= f.number_field :owner_task_id %>
  </div> -->

<% end %>
