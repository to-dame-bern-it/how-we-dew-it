<%= form_for(@task, remote: true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "task-name-edit" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "(optional)", class: "task-description-edit" %>
  </div>
  <div class="field">
    <%= f.label :due_at %>
    <%= f.text_field :due_at, class: "due-at" %>
  </div>
  <div class="field">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, @current_user.categories, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :status_id %>
    <%= f.collection_select :status_id, @current_user.statuses, :id, :name %>
  </div>
  <%= f.submit %>

<!--
  <div class="field">
    <%= f.label :owner_task_id %><br>
    <%= f.number_field :owner_task_id %>
  </div> -->

<% end %>
